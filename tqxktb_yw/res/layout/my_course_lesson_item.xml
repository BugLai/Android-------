<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="45dip"
	android:background="@android:color/transparent"
	android:paddingTop="5dp"
	android:paddingBottom="5dp"
>
	<TextView android:id="@+id/hori_lesson_text"
		style="@style/list_item_text_style"
	/>
	<ProgressBar android:id="@+id/download_progress"
		android:layout_width="100dip"
		android:layout_height="16sp"
		android:layout_toRightOf="@id/hori_lesson_text"
		style="?android:attr/progressBarStyleHorizontal"
		android:layout_marginTop="10dp"
	/>

	<Button android:id="@+id/hori_lesson_play"
	    android:layout_height="33dp"
	    android:layout_width="33dp"
	    android:background="@drawable/play_n"
	    android:layout_toLeftOf="@+id/hori_lesson_delete"
	    android:layout_marginRight="20dip"
	    android:layout_alignParentRight="true"
	/>
	<Button android:id="@+id/hori_lesson_delete"
	    android:layout_height="33dp"
	    android:layout_width="33dp"
	    android:layout_marginRight="20dip"
	    android:background="@drawable/cancel"
	    android:layout_alignParentRight="true"
	/>
	<Button android:id="@+id/hori_lesson_download"
	    android:layout_height="33dp"
	    android:layout_width="33dp"
	    android:background="@drawable/download"
	    android:layout_marginRight="20dip"
	    android:layout_alignParentRight="true"
	/>
	<Button android:id="@+id/hori_lesson_downloading"
	    android:layout_height="33dp"
	    android:layout_width="33dp"
	    android:background="@drawable/downloading"
	    android:layout_marginRight="20dip"
	    android:layout_alignParentRight="true"
	/>
</RelativeLayout>