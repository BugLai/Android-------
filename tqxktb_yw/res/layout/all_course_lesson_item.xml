<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="30dip"
	android:background="@layout/right_background"
	android:paddingRight="10dip"
>
	<TextView android:id="@+id/hori_lesson_text"
		style="@style/list_item_text_style"
	/>
	<Button android:id="@+id/hori_lesson_play"
		style="@style/list_item_button_style"
	    android:layout_toLeftOf="@+id/hori_lesson_download"
		android:layout_marginRight="15dip"
	    android:layout_alignParentRight="true"
	/>
	<Button android:id="@+id/hori_lesson_download"
		style="@style/list_item_button_style"
	    android:layout_alignParentRight="true"
	/>
	<Button android:id="@+id/hori_lesson_delete"
		style="@style/list_item_button_style"
	    android:layout_alignParentRight="true"
	    android:visibility="gone"
	/>
</RelativeLayout>